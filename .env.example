# Environment Configuration for Playwright Tests
# Copy this file to .env.local or .env.dev for local development

# Test Environment: dev, staging, or production
TEST_ENV=dev

# Base URL (overrides environment-specific defaults)
# BASE_URL=https://www.tui.nl/h/nl

# API URL (if needed for API testing)
# API_URL=https://api.tui.nl

# Test Execution Settings
# Random seed for reproducible test runs (defaults to timestamp)
# SEED=12345

# Browser Settings
HEADLESS=false
SLOW_MO=0

# Playwright Settings
CI=false

# Test Timeout Settings (in milliseconds)
# TEST_TIMEOUT=300000
# EXPECT_TIMEOUT=15000

# Retry Settings
# RETRY_COUNT=2

# Debug Settings
DEBUG=false
ENABLE_TRACE=true
ENABLE_VIDEO=true
ENABLE_SCREENSHOT=true
